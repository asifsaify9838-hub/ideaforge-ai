{  
  "version": 2,  
  "builds": [  
    {  
      "src": "api/**/*.js",  
      "use": "@vercel/node"  
    },  
    {  
      "src": "public/**/*",  
      "use": "@vercel/static"  
    }  
  ],  
  "routes": [  
    {  
      "src": "/api/(.*)",  
      "dest": "/api/$1"  
    },  
    {  
      "src": "/(.*)",  
      "dest": "/public/$1"  
    }  
  ],  
  "env": {  
    "OPENAI_API_KEY": "@openai_api_key",  
    "ELEVENLABS_API_KEY": "@elevenlabs_api_key"  
  }  
}
